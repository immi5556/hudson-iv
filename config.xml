<?xml version='1.0' encoding='utf-8'?>
<widget id="co.immanuel.hudson" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hudson Phonegap</name>
    <description>
        A Hudson interview trial.
    </description>
    <author email="raj@immanuel.co" href="http://immanuel.co">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="res/screen/android/screen-img.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-img.png" />
        <splash density="land-mdpi" src="res/screen/android/screen-img.png" />
        <splash density="land-xhdpi" src="res/screen/android/screen-img.png" />
        <splash density="port-hdpi" src="res/screen/android/screen-img.png" />
        <splash density="port-ldpi" src="res/screen/android/screen-img.png" />
        <splash density="port-mdpi" src="res/screen/android/screen-img.png" />
        <splash density="port-xhdpi" src="res/screen/android/screen-img.png" />
        <icon src="res/icon/android/icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="com.googlemaps.ios" spec="https://github.com/mapsplugin/cordova-plugin-googlemaps-sdk" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-googlemaps" spec="https://github.com/mapsplugin/cordova-plugin-googlemaps#multiple_maps">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyDwHYw3iQcIgjeKtxhGxPbmfSOGmlbXRPE" />
        <variable name="API_KEY_FOR_IOS" value="AIzaSyDnFboaD1fzzFfhlj1Q2NEbYmvbMaIbmnM" />
        <variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="Show your location on the map" />
        <variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="Trace your location on the map" />
    </plugin>
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova.plugins.diagnostic" spec="^3.6.5" />
</widget>
